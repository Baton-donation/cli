{
  "name": "cli",
  "version": "0.1.0",
  "bin": {
    "baton": "./bin/run"
  },
  "main": "lib/index.js",
  "repository": "git@github.com:Baton-donation/cli.git",
  "author": "Max Isom <hi@maxisom.me>",
  "license": "MIT",
  "scripts": {
    "lint": "xo",
    "lint-fix": "xo --fix",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "build:binaries": "yarn build && yarn pkg . --out-path dist"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1.26.0",
    "@types/uuid": "^8.3.0",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "pkg": "^4.4.9",
    "typescript": "^4.1.3",
    "xo": "^0.36.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "xo --fix"
    ]
  },
  "pkg": {
    "scripts": "./lib/**/*.js"
  },
  "oclif": {
    "commands": "./lib/commands",
    "hooks": {
      "init": "./lib/hooks/init"
    },
    "bin": "baton",
    "plugins": [
      "@oclif/plugin-help"
    ],
    "topics": {
      "sentences": {
        "description": "manage sentences"
      },
      "keys": {
        "description": "manage keys"
      }
    }
  },
  "files": [
    "/bin",
    "/lib",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "dependencies": {
    "@oclif/command": "^1.8.0",
    "@oclif/config": "^1.17.0",
    "@oclif/plugin-help": "^3.2.1",
    "dotenv": "^8.2.0",
    "got": "^11.8.1",
    "ora": "^5.2.0",
    "uuid": "^8.3.2"
  }
}
